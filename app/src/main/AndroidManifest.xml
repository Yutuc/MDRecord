<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.origami.mdrecord">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".patientfile.EditMedicineActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ViewPatientFileActivity"/>
        </activity>
        <activity android:name=".patientfile.AddMedicineActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ViewPatientFileActivity"/>
        </activity>
        <activity android:name=".patientfile.EditPatientActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ExpandedPatientInfoActivity"/>
        </activity>
        <activity android:name=".patientfile.ExpandedPatientInfoActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ViewPatientFileActivity"/>
        </activity>
        <activity android:name=".patientfile.AddNoteActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ViewPatientFileActivity"/>
        </activity>
        <activity android:name=".patientfile.AddLabAssessmentActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ViewPatientFileActivity"/>
        </activity>
        <activity android:name=".patientfile.AddMedicalAssessmentActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".patientfile.ViewPatientFileActivity"/>
        </activity>
        <activity android:name=".patientfile.ViewPatientFileActivity"
                  android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ChoosePatientActivity"/>
        </activity>
        <activity
                android:name=".CreatePatientActivity"
                android:windowSoftInputMode="adjustPan">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ChoosePatientActivity"/>
        </activity>
        <activity android:name=".ChoosePatientActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".registerlogin.RegisterActivity"
                android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
                android:name=".registerlogin.LoginActivity"
                android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>