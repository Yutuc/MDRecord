<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientfile.CreateMedicalCertificateActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_of_addressee_input_create_medical_certificate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:hint="Name of addressee"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/position_of_addressee_input_create_medical_certificate"
            app:layout_constraintTop_toBottomOf="@+id/name_of_addressee_input_create_medical_certificate"
            app:layout_constraintStart_toStartOf="@+id/name_of_addressee_input_create_medical_certificate"
            app:layout_constraintEnd_toEndOf="@+id/name_of_addressee_input_create_medical_certificate"
            android:hint="Position of addressee"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/diagnoses_input_create_medical_certificate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/position_of_addressee_input_create_medical_certificate"
            app:layout_constraintStart_toStartOf="@+id/position_of_addressee_input_create_medical_certificate"
            app:layout_constraintEnd_toEndOf="@+id/position_of_addressee_input_create_medical_certificate"
            android:hint="Diagnoses"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/remarks_input_create_medical_certificate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/diagnoses_input_create_medical_certificate"
            app:layout_constraintStart_toStartOf="@+id/diagnoses_input_create_medical_certificate"
            app:layout_constraintEnd_toEndOf="@+id/diagnoses_input_create_medical_certificate" android:hint="Remarks"/>
</androidx.constraintlayout.widget.ConstraintLayout>