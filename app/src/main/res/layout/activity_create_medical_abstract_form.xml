<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientfile.CreateMedicalAbstractFormActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPersonName"
                    android:ems="10"
                    android:id="@+id/medical_history_input_create_medical_abstract_form"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" android:hint="Current medical history"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPersonName"
                    android:ems="10"
                    android:id="@+id/physical_examination_input_create_medical_abstract_form"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/medical_history_input_create_medical_abstract_form"
                    app:layout_constraintStart_toStartOf="@+id/medical_history_input_create_medical_abstract_form"
                    app:layout_constraintEnd_toEndOf="@+id/medical_history_input_create_medical_abstract_form"
                    android:hint="Current physical examination"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPersonName"
                    android:ems="10"
                    android:id="@+id/diagnoses_input_create_medical_abstract_form" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/physical_examination_input_create_medical_abstract_form"
                    app:layout_constraintStart_toStartOf="@+id/physical_examination_input_create_medical_abstract_form"
                    app:layout_constraintEnd_toEndOf="@+id/physical_examination_input_create_medical_abstract_form"
                    android:hint="Diagnoses"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPersonName"
                    android:ems="10"
                    android:id="@+id/plans_input_create_medical_abstract_form" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/diagnoses_input_create_medical_abstract_form"
                    app:layout_constraintStart_toStartOf="@+id/diagnoses_input_create_medical_abstract_form"
                    app:layout_constraintEnd_toEndOf="@+id/diagnoses_input_create_medical_abstract_form"
                    android:hint="Plans"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>