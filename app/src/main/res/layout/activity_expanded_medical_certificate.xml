<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientfile.ExpandedMedicalCertificateActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollview_expanded_medical_certificate">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/constraint_layout_scrollview_expanded_medical_certificate">

            <TextView
                    android:text="Doctor name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doctor_name_textview_expanded_medical_certificate"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" android:textSize="20sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Clinic address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clinic_address_expanded_medical_certificate"
                    app:layout_constraintTop_toBottomOf="@+id/doctor_name_textview_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="@+id/doctor_name_textview_expanded_medical_certificate"
                    app:layout_constraintEnd_toEndOf="@+id/doctor_name_textview_expanded_medical_certificate"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Contact number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_number_textview_expanded_medical_certificate"
                    app:layout_constraintTop_toBottomOf="@+id/clinic_address_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="@+id/clinic_address_expanded_medical_certificate"
                    app:layout_constraintEnd_toEndOf="@+id/clinic_address_expanded_medical_certificate"
                    android:textColor="@android:color/black" android:textAlignment="center"/>
            <TextView
                    android:text="Medical Certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/medical_certificate_title_expanded_medical_certificate"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/contact_number_textview_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_textview_expanded_medical_certificate"
                    app:layout_constraintTop_toBottomOf="@+id/medical_certificate_title_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textSize="16sp" android:textAlignment="viewStart" android:textColor="@android:color/black"
                    android:textStyle="bold" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="To:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/to_textview_expanded_medical_certificate" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/date_textview_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textAlignment="viewStart" android:textSize="16sp" android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Name of addressee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_of_addressee_expanded_medical_certificate"
                    app:layout_constraintStart_toEndOf="@+id/to_textview_expanded_medical_certificate"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/date_textview_expanded_medical_certificate"
                    android:textSize="16sp" android:textStyle="bold" android:textAlignment="viewStart"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Position of addressee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/position_of_addressee_expanded_medical_textview"
                    app:layout_constraintTop_toBottomOf="@+id/name_of_addressee_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="@+id/name_of_addressee_expanded_medical_certificate"
                    android:textAlignment="viewStart" android:textSize="16sp" android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Main paragraph..."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:id="@+id/main_paragraph_textview_expanded_medical_certificate"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/position_of_addressee_expanded_medical_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="16sp"
                    android:textAlignment="viewStart" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diagnosis_title_textview_expanded_medical_certificate"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/main_paragraph_textview_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Diagnosis..."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:id="@+id/diagnosis_textview_expanded_medical_certificate"
                    app:layout_constraintTop_toBottomOf="@+id/diagnosis_title_textview_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495" android:textSize="16sp"
                    android:textAlignment="viewStart" android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remarks_title_expanded_medical_certificate" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/diagnosis_textview_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Remarks..."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:id="@+id/remarks_textview_expanded_medical_certificate" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/remarks_title_expanded_medical_certificate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="16sp"
                    android:textColor="@android:color/black" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Name of doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_of_doctor_bottom_expanded_medical_certificate"
                    app:layout_constraintTop_toBottomOf="@+id/remarks_textview_expanded_medical_certificate"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="32dp" android:textStyle="bold" android:textColor="@android:color/black"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="License number:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/license_number_bottom"
                    app:layout_constraintTop_toBottomOf="@+id/name_of_doctor_bottom_expanded_medical_certificate"
                    app:layout_constraintEnd_toEndOf="@+id/name_of_doctor_bottom_expanded_medical_certificate"
                    android:textStyle="bold" android:textAlignment="viewStart"
                    android:textColor="@android:color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>