<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewUserProfileActivity">

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_textview_view_user_profile" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:textStyle="bold"
            android:textSize="24sp" android:textAlignment="center" android:textColor="@android:color/black"/>
    <TextView
            android:text="Specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/specialty_textview_view_user_profile"
            app:layout_constraintTop_toBottomOf="@+id/name_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/black" android:textSize="18sp"
            android:textAlignment="center"/>
    <TextView
            android:text="License number:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/license_number_textview_view_user_profile"
            app:layout_constraintTop_toBottomOf="@+id/specialty_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAlignment="viewStart" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Insurance provider number:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/insurance_provider_number_textview_view_user_profile"
            app:layout_constraintTop_toBottomOf="@+id/license_number_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" android:textAlignment="viewStart" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="S2 number:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/s2_number_textview_view_user_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/insurance_provider_number_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAlignment="viewStart" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Clinic Address:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_address_textview_view_user_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/s2_number_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAlignment="viewStart" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Contact number:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/contact_number_textview_view_user_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/clinic_address_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAlignment="viewStart" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Email:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/email_textview_view_user_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/contact_number_textview_view_user_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textAlignment="viewStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>