<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerlogin.RegisterActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_input_register"
            app:layout_constraintStart_toStartOf="@+id/last_name_input_register"
            app:layout_constraintEnd_toEndOf="@+id/last_name_input_register"
            android:hint="Email"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/last_name_input_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_input_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_input_register"
            app:layout_constraintStart_toStartOf="@+id/email_input_register"
            app:layout_constraintEnd_toEndOf="@+id/email_input_register"
            android:hint="Password" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button_register"
            app:layout_constraintStart_toStartOf="@+id/confirm_password_input_register"
            app:layout_constraintEnd_toEndOf="@+id/confirm_password_input_register"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password_input_register"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/last_name_input_register"
            app:layout_constraintStart_toStartOf="@+id/first_name_input_register"
            app:layout_constraintEnd_toEndOf="@+id/first_name_input_register"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/first_name_input_register"
            android:hint="Last Name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/first_name_input_register" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0" android:hint="First Name"/>
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/already_have_an_account_textview"
            app:layout_constraintTop_toBottomOf="@+id/register_button_register" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/register_button_register"
            app:layout_constraintEnd_toEndOf="@+id/register_button_register" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_password_input_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_input_register"
            app:layout_constraintStart_toStartOf="@+id/password_input_register"
            app:layout_constraintEnd_toEndOf="@+id/password_input_register" android:hint="Confirm Password"/>
</androidx.constraintlayout.widget.ConstraintLayout>