<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerlogin.RegisterActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".registerlogin.RegisterActivity">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/email_input_register"
                        app:layout_constraintStart_toStartOf="@+id/contact_number_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/contact_number_input_register"
                        android:hint="Email"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/contact_number_input_register"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/password_input_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/email_input_register"
                        app:layout_constraintStart_toStartOf="@+id/email_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/email_input_register"
                        android:hint="Password" app:layout_constraintHorizontal_bias="0.0"/>
                <Button
                        android:text="Register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/register_button_register"
                        app:layout_constraintStart_toStartOf="@+id/confirm_password_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/confirm_password_input_register"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/confirm_password_input_register"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/last_name_input_register"
                        app:layout_constraintStart_toStartOf="@+id/middle_name_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/middle_name_input_register"
                        android:hint="Last name" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/middle_name_input_register"
                        android:layout_marginTop="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/first_name_input_register" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
                        android:hint="First name"/>
                <TextView
                        android:text="Already have an account?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/already_have_an_account_textview"
                        app:layout_constraintTop_toBottomOf="@+id/register_button_register"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/register_button_register"
                        app:layout_constraintEnd_toEndOf="@+id/register_button_register"
                        android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="32dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/confirm_password_input_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/password_input_register"
                        app:layout_constraintStart_toStartOf="@+id/password_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/password_input_register"
                        android:hint="Confirm password"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/middle_name_input_register"
                        app:layout_constraintTop_toBottomOf="@+id/first_name_input_register"
                        app:layout_constraintStart_toStartOf="@+id/first_name_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/first_name_input_register" android:hint="Middle name"
                        android:layout_marginTop="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/specialty_input_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/last_name_input_register"
                        app:layout_constraintStart_toStartOf="@+id/last_name_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/last_name_input_register" android:hint="Specialty"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/license_number_input_register"
                        app:layout_constraintTop_toBottomOf="@+id/specialty_input_register"
                        app:layout_constraintStart_toStartOf="@+id/specialty_input_register"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/specialty_input_register" android:hint="License number"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/insurance_provider_number_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/license_number_input_register"
                        app:layout_constraintStart_toStartOf="@+id/license_number_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/license_number_input_register"
                        android:hint="Insurance provider number"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/s2_number_input_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/insurance_provider_number_register"
                        app:layout_constraintStart_toStartOf="@+id/insurance_provider_number_register"
                        app:layout_constraintEnd_toEndOf="@+id/insurance_provider_number_register"
                        android:hint="S2 number"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/clinic_address_input_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/s2_number_input_register"
                        app:layout_constraintStart_toStartOf="@+id/s2_number_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/s2_number_input_register" android:hint="Clinic address"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/contact_number_input_register" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/clinic_address_input_register"
                        app:layout_constraintStart_toStartOf="@+id/clinic_address_input_register"
                        app:layout_constraintEnd_toEndOf="@+id/clinic_address_input_register"
                        android:hint="Contact number"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>