<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditUserActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/email_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/contact_number_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/contact_number_input_edit_user"
                    android:hint="Email"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/contact_number_input_edit_user"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password_input_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/email_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/email_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/email_input_edit_user"
                    android:hint="Password" app:layout_constraintHorizontal_bias="0.0"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/last_name_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/middle_name_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/middle_name_input_edit_user"
                    android:hint="Last name" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/middle_name_input_edit_user"
                    android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/first_name_input_edit_user" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
                    android:hint="First name"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/middle_name_input_edit_user"
                    app:layout_constraintTop_toBottomOf="@+id/first_name_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/first_name_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/first_name_input_edit_user" android:hint="Middle name"
                    android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/specialty_input_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/last_name_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/last_name_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/last_name_input_edit_user" android:hint="Specialty"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/license_number_input_edit_user"
                    app:layout_constraintTop_toBottomOf="@+id/specialty_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/specialty_input_edit_user"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/specialty_input_edit_user" android:hint="License number"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/insurance_provider_number_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/license_number_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/license_number_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/license_number_input_edit_user"
                    android:hint="Insurance provider number"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/s2_number_input_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/insurance_provider_number_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/insurance_provider_number_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/insurance_provider_number_edit_user"
                    android:hint="S2 number"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/clinic_address_input_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/s2_number_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/s2_number_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/s2_number_input_edit_user" android:hint="Clinic address"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/contact_number_input_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/clinic_address_input_edit_user"
                    app:layout_constraintStart_toStartOf="@+id/clinic_address_input_edit_user"
                    app:layout_constraintEnd_toEndOf="@+id/clinic_address_input_edit_user"
                    android:hint="Contact number"/>
            <TextView
                    android:text="Change password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/change_password_textview_edit_user" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/password_input_edit_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>