<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientfile.AddPatientMedicationActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/drug_name_input_patient_medication" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:hint="Drug name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dose_input_patient_medication" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/drug_name_input_patient_medication"
            app:layout_constraintStart_toStartOf="@+id/drug_name_input_patient_medication"
            app:layout_constraintEnd_toEndOf="@+id/drug_name_input_patient_medication" android:hint="Dose(e.g. 500mg/tab)"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/frequency_input_patient_medication" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dose_input_patient_medication"
            app:layout_constraintStart_toStartOf="@+id/dose_input_patient_medication"
            app:layout_constraintEnd_toEndOf="@+id/dose_input_patient_medication" android:hint="Frequency(e.g. 3 times a day)"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName|textImeMultiLine"
            android:ems="10"
            android:id="@+id/instructions_input_patient_medication" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frequency_input_patient_medication"
            app:layout_constraintStart_toStartOf="@+id/frequency_input_patient_medication"
            app:layout_constraintEnd_toEndOf="@+id/frequency_input_patient_medication" android:hint="Instructions"
    />
</androidx.constraintlayout.widget.ConstraintLayout>