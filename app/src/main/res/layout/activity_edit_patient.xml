<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientfile.EditPatientActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/first_name_input_edit_patient"
                    android:hint="First name"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:autoText="true"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/last_name_input_edit_patient" android:hint="Last name"
                    app:layout_constraintStart_toStartOf="@+id/middle_name_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/middle_name_input_edit_patient"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/middle_name_input_edit_patient"
                    android:autoText="true"/>
            <TextView
                    android:text="Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender_title_edit_patient"
                    app:layout_constraintTop_toBottomOf="@+id/date_of_birth_input_edit_patient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/middle_name_input_edit_patient"
                    android:hint="Middle name"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/first_name_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/first_name_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/first_name_input_edit_patient" android:autoText="true"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/date_of_birth_input_edit_patient"
                    android:hint="mm/dd/yyyy"
                    app:layout_constraintStart_toStartOf="@+id/last_name_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/last_name_input_edit_patient"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/last_name_input_edit_patient"/>
            <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/blood_type_radio_group_edit_patient"
                    app:layout_constraintTop_toBottomOf="@+id/blood_type_title_edit_patient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginStart="8dp">
                <RadioButton
                        android:text="A+"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/a_positive_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="A-"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/a_negative_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="B+"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/b_positive_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="B-"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/b_negative_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="AB+"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/ab_positive_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="AB-"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/ab_negative_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="O+"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/o_positive_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="O-"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/o_negative_radio_button_edit_patient"
                        android:layout_weight="1"/>
            </RadioGroup>
            <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/gender_radio_group_edit_patient"
                    app:layout_constraintTop_toBottomOf="@+id/gender_title_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/date_of_birth_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/date_of_birth_input_edit_patient"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
                <RadioButton
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/male_radio_button_edit_patient"
                        android:layout_weight="1" android:textAlignment="viewStart"/>
                <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/female_radio_button_edit_patient"
                        android:layout_weight="1" android:textAlignment="viewStart"/>
            </RadioGroup>
            <TextView
                    android:text="Blood Type"
                    app:layout_constraintTop_toBottomOf="@id/gender_radio_group_edit_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blood_type_title_edit_patient" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Civil Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/civil_status_title_edit_patient"
                    app:layout_constraintTop_toBottomOf="@+id/blood_type_radio_group_edit_patient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
            <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/civil_status_title_edit_patient"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/civil_status_radio_group_edit_patient" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">
                <RadioButton
                        android:text="Single"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/single_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="Married"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/married_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="Separated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/separated_radio_button_edit_patient"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="Divorced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/divorced_radio_button_edit_patient"
                        android:layout_weight="1"/>
            </RadioGroup>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nationality_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/weight_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/weight_input_edit_patient"
                    android:hint="Nationality" android:autoText="true"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/weight_unit_of_measurement_radio_group_edit_patient"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/religion_input_edit_patient"
                    android:hint="Religion"
                    android:autoText="true" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/nationality_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/nationality_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/nationality_input_edit_patient"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/religion_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/religion_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/religion_input_edit_patient"
                    android:id="@+id/address_input_edit_patient" android:hint="Address" android:autoText="true"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/email_input_edit_patient"
                    android:hint="Email"
                    android:autoText="true" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/address_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/address_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/address_input_edit_patient"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/contact_number_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@id/email_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@id/email_input_edit_patient"
                    android:hint="Phone number"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/email_input_edit_patient"
                    android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/height_meter_input_edit_patient"
                    android:digits="0123456789."
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/civil_status_radio_group_edit_patient"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:hint="Height(m)"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/weight_input_edit_patient"
                    app:layout_constraintStart_toStartOf="@+id/height_meter_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="@+id/height_meter_input_edit_patient"
                    android:hint="Weight(kg)"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/height_unit_of_measurement_radio_group_edit_patient"/>
            <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/height_meter_input_edit_patient"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/height_unit_of_measurement_radio_group_edit_patient"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
                <RadioButton
                        android:text="Meters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/meters_radio_button_edit_patient"
                        android:layout_weight="1" android:checked="true"/>
                <RadioButton
                        android:text="Feet &amp; Inches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/feet_and_inches_radio_button_edit_patient" android:layout_weight="1"/>
            </RadioGroup>
            <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/weight_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    android:id="@+id/weight_unit_of_measurement_radio_group_edit_patient">
                <RadioButton
                        android:text="Kilograms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:id="@+id/kilograms_radio_button_edit_patient" android:checked="true"/>
                <RadioButton
                        android:text="Lbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/pounds_radio_button_edit_patient"
                        android:layout_weight="1"/>
            </RadioGroup>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/height_feet_input_edit_patient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/height_meter_input_edit_patient"
                    app:layout_constraintTop_toTopOf="@+id/height_meter_input_edit_patient" android:hint="Feet"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/height_inches_input_edit_patient"
                    android:layout_marginStart="16dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/height_inches_input_edit_patient"
                    app:layout_constraintStart_toEndOf="@+id/height_feet_input_edit_patient"
                    app:layout_constraintTop_toTopOf="@+id/height_meter_input_edit_patient"
                    app:layout_constraintBottom_toBottomOf="@+id/height_meter_input_edit_patient"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="Inches"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginEnd="16dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPersonName"
                    app:layout_constraintTop_toBottomOf="@id/contact_number_input_edit_patient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="Diagnoses"
                    android:ems="10"
                    android:id="@+id/diagnoses_input_edit_patient" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>