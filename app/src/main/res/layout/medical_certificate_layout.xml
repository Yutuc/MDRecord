<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_textview_medical_certificate_layout" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="18sp" android:textStyle="bold" android:textAlignment="center"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="To:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/to_textview_medical_certificate_layout"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/date_textview_medical_certificate_layout"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textSize="16sp" android:textStyle="bold" android:textAlignment="viewStart"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Name of addressee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_of_addressee_textview_medical_certificate_layout"
                    app:layout_constraintTop_toBottomOf="@+id/date_textview_medical_certificate_layout"
                    app:layout_constraintStart_toEndOf="@+id/to_textview_medical_certificate_layout"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="16sp"
                    android:textStyle="bold" android:textAlignment="viewStart"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Position of addressee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/position_of_addressee_textview_medical_certificate_layout"
                    app:layout_constraintTop_toBottomOf="@+id/name_of_addressee_textview_medical_certificate_layout"
                    app:layout_constraintStart_toStartOf="@+id/name_of_addressee_textview_medical_certificate_layout"
                    android:textSize="16sp" android:textStyle="bold" android:textAlignment="viewStart"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diagnosis_title_textview_medical_certificate_layout"
                    app:layout_constraintTop_toBottomOf="@+id/position_of_addressee_textview_medical_certificate_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Diagnosis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/diagnosis_textview_medical_certificate_layout"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/diagnosis_title_textview_medical_certificate_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="viewStart" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remarks_title_textview_medical_certificate_layout" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/diagnosis_textview_medical_certificate_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"/>
            <TextView
                    android:text="Remarks..."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:id="@+id/remarks_textview_medical_certificate_layout" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/remarks_title_textview_medical_certificate_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textAlignment="viewStart"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@android:color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>