<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientfile.ExpandedPatientInfoActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="First name, middle name, last name Age/Gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_age_gender_textview_expanded_patient_info"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textStyle="bold"
                    android:textAlignment="center" android:textColor="@android:color/black"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Address:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_age_gender_textview_expanded_patient_info"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:textSize="18sp"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="Contact number:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_number_textview_expanded_patient_info" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/address_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:textAlignment="viewStart" android:textSize="18sp"/>
            <TextView
                    android:text="Email:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/contact_number_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Diagnoses list"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/diagnoses_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textSize="18sp" android:textAlignment="viewStart"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/diagnoses_expanded_patient_info"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Date of birth:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_of_birth_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" android:textAlignment="viewStart"
                    android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/email_textview_expanded_patient_info"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Civil status:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/civil_status_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/date_of_birth_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp" android:textAlignment="viewStart" android:textSize="18sp"/>
            <TextView
                    android:text="Blood type:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/blood_type_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/civil_status_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Height:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/height_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/blood_type_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Weight:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/weight_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/height_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="BMI:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmi_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/weight_textview_expanded_patient_info"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textAlignment="viewStart" android:textSize="18sp"/>
            <TextView
                    android:text="Nationality:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nationality_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/bmi_textview_expanded_patient_info"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textSize="18sp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="Religion:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/religion_textview_expanded_patient_info"
                    app:layout_constraintTop_toBottomOf="@+id/nationality_textview_expanded_patient_info"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textSize="18sp" android:textAlignment="viewStart"
            />
            <TextView
                    android:text="Diagnoses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diagnoses_expanded_patient_info" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/religion_textview_expanded_patient_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textAlignment="center"
                    android:textStyle="bold" android:textColor="@android:color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>